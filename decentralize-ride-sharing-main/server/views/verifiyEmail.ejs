<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- <link href="./index.css" rel="stylesheet"> -->
    <style>
        .forgot-form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 1rem;
            padding-bottom: 10rem;
        }

        .forgot-password-form {
            background: #fff;
            width: 100%;
            max-width: 600px;
            position: relative;
            padding: 2rem 4rem;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 3px 0px, rgba(0, 0, 0, 0.06) 0px 1px 2px 0px;

        }

        .forgot-password-form::after {
            content: "";
            width: 100%;
            height: 8px;
            background: #01D28E;
            position: absolute;
            top: -5px;
            right: 0;
            border-top-left-radius: 3px;
            border-top-right-radius: 3px;
        }

        .forgot-text {
            color: #01D28E;
        }

        .forgot-submit-btn {
            background: #01D28E;
            border: none;
            color: #fff;
            height: 40px;
            width: 100%;
            border-radius: 6px;
        }
    </style>

</head>

<script>
    var status = '<%- JSON.stringify(status) %>';
    if (JSON.parse(status) == "verified") {
        if (confirm("Email Verified : Do u want to login?")) {
            window.location.href = "http://localhost:3000/login";
        }
    }
</script>

<body>
    <div class="forgot-form-container">
        <form class="forgot-password-form" method="post">
            <h3 class="forgot-text">
                Verify Email
            </h3>
            <div class="form-group mb-4 mt-5">
                <label for="email">
                    <%= email %>
                </label>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="forgot-submit-btn">Verify Email</button>
            </div>
        </form>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>